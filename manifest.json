{
  "manifest_version": 3,
  "name": "PhishGuard - Real-Time Phishing Detector",
  "version": "1.0",
  "description": "Scans pages for phishing threats in real-time using AI.",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
